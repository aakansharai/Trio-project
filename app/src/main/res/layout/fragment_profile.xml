<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background_grey"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.Profile">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageProfile"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/user"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <ImageButton
        android:id="@+id/editImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:backgroundTint="@android:color/transparent"
        android:src="@drawable/edit"
        app:layout_constraintBottom_toBottomOf="@+id/imageProfile"
        app:layout_constraintStart_toEndOf="@+id/imageProfile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello! Aakansha"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/encode_sans_semibold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageProfile"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/black"
        android:paddingHorizontal="15dp"
        android:text="Edit Profile"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/profileProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/horizontalView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="15dp"
        android:background="#C9616060"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/greeting" />

    <View
        android:id="@+id/verticalView"
        android:layout_width="1dp"
        android:visibility="gone"
        android:layout_height="300dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalView"
        app:layout_constraintVertical_bias="0.112" />

    <TextView
        android:id="@+id/nameProfileFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Name  :"
        android:textStyle="bold"
        android:layout_marginEnd="25dp"
        android:fontFamily="@font/comfortaa"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/verticalView"
        app:layout_constraintTop_toBottomOf="@+id/horizontalView" />

    <TextView
        android:id="@+id/UserIdProfileFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="25dp"
        android:fontFamily="@font/comfortaa"
        android:text="UserId  :"
        android:textStyle="bold"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/verticalView"
        app:layout_constraintTop_toBottomOf="@+id/horizontalView" />

    <TextView
        android:id="@+id/LocationPreferenceProfileFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/comfortaa"
        android:text="Location Preference  :"
        android:textStyle="bold"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginEnd="25dp"
        app:layout_constraintEnd_toStartOf="@+id/verticalView"
        app:layout_constraintTop_toBottomOf="@+id/horizontalView" />

    <TextView
        android:id="@+id/EmailIdProfileFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:fontFamily="@font/comfortaa"
        android:text="Email Id  :"
        android:textStyle="bold"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginEnd="25dp"
        app:layout_constraintEnd_toStartOf="@+id/verticalView"
        app:layout_constraintTop_toBottomOf="@+id/horizontalView" />

    <TextView
        android:id="@+id/BloodGroupProfileFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:fontFamily="@font/comfortaa"
        android:text="Blood Group  :"
        android:textStyle="bold"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginEnd="25dp"
        app:layout_constraintEnd_toStartOf="@+id/verticalView"
        app:layout_constraintTop_toBottomOf="@+id/horizontalView" />


    <TextView
        android:id="@+id/nameProfileFragmentValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/comfortaa"
        android:text="Unknown"
        android:visibility="gone"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/verticalView"
        app:layout_constraintTop_toBottomOf="@+id/horizontalView" />

    <TextView
        android:id="@+id/UserIdProfileFragmentValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/comfortaa_bold"
        android:text="000"
        android:visibility="gone"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/verticalView"
        app:layout_constraintTop_toBottomOf="@+id/horizontalView" />

    <TextView
        android:id="@+id/LocationPreferenceProfileFragmentValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/comfortaa"
        android:text="Null"
        android:visibility="gone"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/verticalView"
        app:layout_constraintTop_toBottomOf="@+id/horizontalView" />

    <TextView
        android:id="@+id/EmailIdProfileFragmentValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:fontFamily="@font/comfortaa"
        android:text="null"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/verticalView"
        app:layout_constraintTop_toBottomOf="@+id/horizontalView" />

    <TextView
        android:id="@+id/BloodGroupProfileFragmentValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:fontFamily="@font/comfortaa"
        android:text="null"
        android:visibility="gone"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/verticalView"
        app:layout_constraintTop_toBottomOf="@+id/horizontalView" />


</androidx.constraintlayout.widget.ConstraintLayout>