<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".UserHome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@color/red">

        <ImageView
            android:id="@+id/sideNavOpen"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@drawable/hamburger"
            app:tint="@color/white"/>

        <TextView
            android:id="@+id/titleHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:fontFamily="@font/encode_sans_semibold"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:text="InstaBlood"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

        <!--    Switch button to show Availability of Doner -->
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:checked="false"
            app:switchMinWidth="50dp"
            android:text="@string/available_for_donate"
            android:theme="@style/SCBSwitch"
            android:layout_marginVertical="15dp"
            android:layout_marginEnd="20dp"/>

        <View
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="@color/black"/>


        <androidx.drawerlayout.widget.DrawerLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/Drawer"
            tools:context=".MainHome">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/frameLayout"
                android:orientation="vertical">


            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.navigation.NavigationView
                android:id="@+id/navigation"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:headerLayout="@layout/nav_header"
                app:menu="@menu/side_nav"
                android:layout_gravity="start"/>

        </androidx.drawerlayout.widget.DrawerLayout>

    </LinearLayout>

</LinearLayout>